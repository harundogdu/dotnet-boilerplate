@{
ViewData["Title"] = "Toplantı katılım formu";
}


<h1 class="h4 text-lead">Toplantı katılım formu</h1>
<form action="/Meeting/Apply" method="post">
    <div class="form-group mt-4 mb-2">
        <label for="Name" class="form-label">Ad Soyad</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Adınızı giriniz...">
    </div>
    <div class="form-group my-2">
        <label for="Phone" class="form-label">Telefon</label>
        <input type="tel" class="form-control" id="Phone" name="Phone" placeholder="Telefon numaranızı giriniz...">
    </div>
    <div class="form-group my-2">
        <label for="Email" class="form-label">E-posta</label>
        <input type="email" class="form-control" id="Email" name="Email" placeholder="E-posta adresinizi giriniz...">
    </div>
    <div class="form-group mt-2 mb-4">
        <label for="WillAttend" class="form-label">Katılım durumu</label>
        <select name="WillAttend" id="WillAttend" class="form-select">
            <option value="true">Evet, Katılacağım</option>
            <option value="false">Hayır, Katılmayacağım</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>