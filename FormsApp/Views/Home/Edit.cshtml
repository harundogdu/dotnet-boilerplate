@model Product

@{
ViewData["Title"] = "Edit Product";
}


<form class="card card-body" method="post" asp-action="Edit" asp-controller="Home" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div> <!-- This line is important -->
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <div class="form-group my-2">
            <input type="file" name="imageFile" id="imageFile" class="form-control" />
        </div>
        <div class="form-group my-2">
            <img src="~/img/@Model.ImageUrl" alt="@Model.Name" width="100" height="100" />
            <!-- hidden image -->
            <input type="hidden" asp-for="@Model.ImageUrl" />
        </div>
    </div>
    <div class="form-group my-2">
        <input asp-for="IsAvailable" class="form-check-input" />
        <label asp-for="IsAvailable" class="form-check-label"></label>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            <option value="0">All</option>
            @foreach (var category in ViewBag.Categories)
            {
            <option value="@category.CategoryId">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-warning">Edit</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>