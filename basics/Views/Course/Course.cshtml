@model Course

<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <img class="card-img-top img-fluid" src="~/img/@Model.Image" alt="@Model.Title Image" style="height: 200px;">
        <div class="card-body">
            <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id"
                class="card-title text-decoration-none text-dark hover-text-danger">
                <h5 class="card-title">@Model.Title</h5>
            </a>
            <p class="card-text" style="height:40px;">@Model.Description</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        @Model.RegisteredUsersCount user registered
                    </small>
                    <small class="text-muted">
                        @Model.ReleaseDate
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>