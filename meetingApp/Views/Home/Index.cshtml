@model MeetingInfo;

@{
ViewData["Title"] = "Ana sayfa";
}

<h1 class="h4 text-lead">Merhaba @ViewData["Time"]!</h1>
<p class="text-muted">Katılım durumunuzu bildiriniz.</p>

<div class="card my-3">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy HH:mm:ss") tarihinde gerçekleşecek.</li>
        <li class="list-group-item">@Model.NumberOfPeople katılımcı</li>
    </ul>
</div>

<a class="btn btn-primary" asp-controller="Meeting" asp-action="Apply">Başvuru yap</a>