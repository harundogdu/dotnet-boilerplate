@model List<Course>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Course list</title>
    </head>

    <body>
        <h1>Course list page</h1>
        <table>
            <thead>
                <tr>
                    <th>Course ID</th>
                    <th>Course Title</th>
                    <th>Course Description</th>
                    <th>Course Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                <tr>
                    <td>@course.Id</td>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td><img width="250" src="~/img/@course.Image" alt="@course.Title Image"></td>
                </tr>
                }
            </tbody>
    </body>

    </html>