@model UserInfo;
@{
ViewData["Title"] = "Toplantı katılım formu";
}


<h1 class="h4 text-lead">Toplantı katılım formu</h1>
<form method="post" asp-controller="Meeting" asp-action="Apply">
    <div class="form-group mt-4 mb-2">
        <label asp-for="Name" class="form-label">Ad Soyad</label>
        <input asp-for="Name" class="form-control" placeholder="Adınızı giriniz...">
    </div>
    <div class="form-group my-2">
        <label asp-for="Phone" class="form-label">Telefon</label>
        <input asp-for="Phone" class="form-control" placeholder="Telefon numaranızı giriniz...">
    </div>
    <div class="form-group my-2">
        <label asp-for="Email" class="form-label">E-posta</label>
        <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi giriniz...">
    </div>
    <div class="form-group mt-2 mb-4">
        <label asp-for="WillAttend" class="form-label">Katılım durumu</label>
        <select asp-for="WillAttend" class="form-select">
            <option value="true">Evet, Katılacağım</option>
            <option value="false">Hayır, Katılmayacağım</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>