@model CourseEnrollment

@{
ViewData["Title"] = "Enroll in a course";
}


<div class="card">
    <div class="card-header">
        <h4>Enroll in a course</h4>
        <p>Fill in the form below to enroll in a course</p>
    </div>

    <div class="card-body">
        <form asp-controller="CourseEnrollment" asp-action="Enroll" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="CourseId" class="form-label">Course name</label>
                <select asp-items="ViewBag.Courses" class="form-control"></select>
            </div>
             <div class="form-group my-2">
                <label asp-for="StudentId" class="form-label">Student name</label>
                <select asp-items="ViewBag.Students"  class="form-control"></select>
            </div>
            <div class="form-group my-2">
                <button type="submit" class="btn btn-primary">
                    Enroll
                </button>
            </div>
        </form>
    </div>
</div>