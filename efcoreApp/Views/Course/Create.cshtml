@model Course

@{
ViewData["Title"] = "Create a new course";
}

<div class="card">
    <div class="card-header">
        <h4>Create a new course</h4>
        <p>Fill in the form below to create a new course</p>
    </div>
    <div class="card-body">
        <form asp-controller="Course" asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="CourseTitle" class="form-label">Course name</label>
                <input asp-for="CourseTitle" class="form-control" placeholder="Enter a valid name">
            </div>
            <div class="form-group mt-4">
                <a asp-controller="Course" asp-action="Index" class="btn btn-secondary">Back to list</a>
                <button class="btn btn-primary" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>